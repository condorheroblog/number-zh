{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"number-to-zh": ["./packages/number-to-zh/src/index.ts"],
			"number-to-zh-currency": ["./packages/number-to-zh-currency/src/index.ts"],
			"zh-currency-to-number": ["./packages/zh-currency-to-number/src/index.ts"],
			"zh-to-number": ["./packages/zh-to-number/src/index.ts"]
		}
	}
}
